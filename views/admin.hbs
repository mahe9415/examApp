<!DOCTYPE html>
<html>
<head>
	<title>Admin panel</title>
<link rel="stylesheet" type="text/css" href="/css/lib/bootstrap.min.css">
<style type="text/css">
	.wraper{
		width:300px;
		position:absolute;top:30%;left:35%;
		border:1px;
	}

</style>
<script src="/js/jquery.min.js"></script>
</head>
<body>
<nav class="navbar">
    <div class="navbar-header">
     <a class="navbar-brand" href="#"><img src="/logo.jpg" width="45"></a>
    </div>
    <p class="navbar-text" style="color: yellowgreen; padding-top: 30px; margin:0;">NFNLabs</p>
    <h2 class="navbar-text" style="position:absolute;top:11%;left:40%;" >OnlineTest</h2>
</nav>
<div class="container-fluid wraper">
<form id="admin">
<div class="panel panel-success text-center">
<div class="panel-heading"><h5>Login</h5></div></div>
<div class="form-group">   
<input class="form-control input-sm" placeholder="Username" type="text" name="user" >
</div>
<div class="form-group">
<input placeholder="password" type="password" class="form-control input-sm" name="password">
</div>
<button class="btn btn-success pull-right">Submit</button>
</form>
</div>
<script type="text/javascript">
	$(document).ready(function(){
    if(localStorage.admin){
      window.location.href='/action'
    }
$("form").submit(function(event){
  event.preventDefault();
  $.post('/adminLogin',$(this).serialize(),function(data){
   if(data.status){
   	localStorage.admin=true
  window.location.href='/action'
}
  })
})})
</script>
</body>
</html>
