//     if(event.keyCode == 13) {
//       event.preventDefault();
//       return false;
//     }
//   });
// });

$(document).ready(function(){
var err;
$("form").submit(function(event){
  event.preventDefault();
  $('.error').text(' ')
  $.post('postUserData',$(this).serialize(),function(data){
   if(data.errmsg){
    $('.error').append(data.errmsg)
}
else if(data.errors){
    err=Object.keys(data.errors)
     for(e of err)
     {
    $('.error').append('<li>'+e+' is not valid</li>')
     }
}
else
{   
    localStorage.is_loggedin=true
    window.location.href='/exam'
}
    })
}
)
})
    </script>
    <style type="text/css">
        .error li{
    list-style: none;
    color:red;
        }
        .error li:first-letter{
            text-transform: capitalize;
        }
    </style>
</body>
</html>