<html>
<head>
	<title>POST QUESTIONS</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/css/lib/bootstrap-iso.css" /> 
	<link rel="stylesheet" href="/css/lib/bootstrap.min.css" />  
	<link rel="stylesheet" href="/css/lib/fw/css/font-awesome.min.css" />
  <script src="/js/jquery.min.js"></script>
	<style type="text/css">
	.bootstrap-iso .formden_header h2, .bootstrap-iso .formden_header p, .bootstrap-iso form{font-family: Arial, Helvetica, sans-serif; color: black;width:100%;}.bootstrap-iso form button, .bootstrap-iso form button:hover{color: white !important;} .form-horizontal{display:block;width:100%;margin-left:240px;}
      .mt-0{margin-top: 0;}.well{background-color:white;}.bootstrap-iso .btn{border-radius: 2px;}
      .form-inline{padding: 20px;} .select { width:100%;}  .bootstrap-iso .form-control{width:50%;}
      </style>
</head>
<body>
<div calss="container">
<a class="navbar-brand" href="#"><img src="/logo.jpg" width="50"></a>
<h2 class="well text-center mt-0"> Welcome to NFNLabs</h2>
</div>
<div class="bootstrap-iso">
 <div class="container-fluid">
  <div class="row">
   <div class="">
    <form class="form-horizontal container" method="post" action="/postQuestions">
     <div class="form-group container">
      
       <textarea class="form-control container"  id="question" name="question" placeholder="Type the Question" rows="10"></textarea>
    
     </div>
     <div class="form-inline text-center">
     <div class="form-group container-fluid">
       <select class="select form-control container" id="question_Type" name="question_Type">
        <option  disabled selected>
         Question type
        </option>
        
        <option value="objective">
         Objective
        </option>
        <option value="fill_in_the_blank_answer">
         Fill in the blanks
        </option>
       </select>
  
     </div>

     <div class="form-group container-fluid">
      
       <select class="select form-control container" id="category" name="category">
        <option disabled selected>
         Question category
        </option>
        <option value="Logical">
         Logical
        </option>
        <option value="Quantitive">
         Quantitive
        </option>
        <option value="Programming">
         Programming
        </option>
       </select>
     </div>
     </div>
     <div class="hidden" id="obj1">
     <div class="form-group ">
      <div class="">
      <input class="form-control container" placeholder="Option A" id="a" name="a" type="text"/>
      </div>
      </div>
     <div class="form-group ">
      <div class="">
       <input class="form-control container" placeholder="Option B" id="b" name="b" type="text"/>
      </div>
     </div>
     <div class="form-group ">
      <div class="">
       <input class="form-control container" placeholder="Option C" id="c" name="c" type="text"/>
      </div>
     </div>
     <div class="form-group ">
      <div class="">
       <input class="form-control container" placeholder="Option D" id="d" name="d" type="text"/>
      </div>
     </div>
     </div>

     <div class="hidden" id="fill_in">
         <div class="form-group">
             <div class="">
             <input class="form-control container" placeholder="Answer" id="fill" name="correct_answer" type="text"/>
             </div>
         </div>
     </div>

     <div class="form-group form-btn text-center">
      
       <button class="btn btn-success btn-lg" name="submit" type="submit">
        Submit
       </button>
      
     </div>
    </form>
   </div>
  </div>
 </div>
</div>
<script type="text/javascript">
  $("#question_Type").on('change',function(){
    if(this.value == 'fill_in_the_blank_answer'){
    $("#fill_in").attr('class',"container");
    $("#obj1").attr('class',"hidden");
    }
    else if(this.value=='objective'){
      $("#obj1").attr('class',"container");
       $("#fill_in").attr('class',"hidden");
    }
})
</script>
</body>
</html>